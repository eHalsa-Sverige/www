---
sitemap:
  exclude: 'yes'
---
{
    "short_name": "{{ site.title_short }}",
    "name": "{{ site.title }}",
    "icons": [
      {
        "src": "/assets/images/icons/icons-192.png",
        "type": "image/png",
        "sizes": "192x192"
      },
      {
        "src": "/assets/images/icons/icons-512.png",
        "type": "image/png",
        "sizes": "512x512"
      }, 
      {
          "src": "/favicon.svg",
          "sizes": "48x48 72x72 96x96 128x128 150x150 256x256 512x512 1024x1024",
          "type": "image/svg+xml",
          "purpose": "any maskable"
      }
    ],
    "start_url": "/",
    "background_color": "#{{ site.color.dark }}",
    "display": "minimal-ui",
    "theme_color": "#{{ site.color.primary }}",
    "description": "{{ site.description }}"
  }