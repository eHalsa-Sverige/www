---
permalink: /video-sitemap.xml
sitemap:
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="{{ site.url }}/video-sitemap.xsl"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd http://www.google.com/schemas/sitemap-video/1.1 http://www.google.com/schemas/sitemap-video/1.1/sitemap-video.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:video="http://www.google.com/schemas/sitemap-video/1.1">
	{% for post in site.posts %}
		{% unless post.published == false or post.video == false %}
			{% if post.video %}
				<url>
					<loc>{{ site.url }}{{ post.url }}</loc>
					<video:video>
						<video:title><![CDATA[{{ post.title }}]]></video:title>
						<video:description><![CDATA[{{ post.description }}]]></video:description>
						<video:tag><![CDATA["{{ post.tags | join: '", "' }}"]]></video:tag>
						<video:content_loc>{{ site.url }}{{ post.video }}</video:content_loc>
						<video:thumbnail_loc>{{ site.url }}{{ post.video | replace: "mp4", "png" }}</video:thumbnail_loc>
						<video:publication_date>{{ post.date | date: "%Y-%m-%dT%H:%M:00+02:00" }}</video:publication_date>
						<video:family_friendly>yes</video:family_friendly>
						<video:uploader info="{{ site.url }}">{{ post.author.name }}</video:uploader>
						<video:live>no</video:live>
					</video:video>
				</url>
			{% endif %}
		{% endunless %}
	{% endfor %}
</urlset>